
<% if @messages %>
  <% @messages.each do |message| %>
    <div class="row">
      <div class="small-6 small-centered columns message-body">
        <%= message.body %>
      </div>
    </div>
  <% end %>
<% end %>

<div class="row">
  <div class="small-6 small-centered columns message-form">
  <%= form_for @message do |f| %>
    <%= f.label 'message' %>
    <%= f.text_field :body %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :conversation_id, :value => params['id'] %>
    <%= f.submit 'send', :class => 'tiny button' %>
  <% end %>
  </div>
</div>


