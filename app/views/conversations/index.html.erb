<div class="row inbox-row">
  <div class="small-8 small-centered columns inbox-wrapper">

    <div class="row">
      <h4 class="small-12 small-centered columns">Messages</h4>
    </div>

    <% current_user.conversations.each do |conversation| %>
      <a class="inbox-link" href="/conversations/<%=conversation.id%>" >
      <div class="row">
        <div class="small-11 small-centered columns inbox-conversation">
          <div class="row">
            <div class="small-2 columns">
              <%= image_tag (conversation.users - [current_user]).first.photo.url(:small), :class => "inbox-picture" %>
            </div>
            <div class="small-10 columns inbox-text">
              <h4 class="inbox-name">
                <%= (conversation.users - [current_user]).first.firstname %>
                <%= (conversation.users - [current_user]).first.lastname %>
              </h4>
              <% if conversation.messages.last %>
              <p><%= conversation.messages.last.body[0..20] + "..." %></p>
              <% end %>
            </div>
            </div>
        </div>
      </div>
      </a>
    <% end %>

  </div>
</div>
 
