<p id="notice"><%= notice %></p>

<div class="row">
  <div class="large-8 large-centered columns">

    <h1>profile</h1>

    <div class="row">
      <div class="large-5 columns">
        <%= image_tag @user.photo.url(:medium) %>
      </div>
      <div class="large-7 columns">
        <p>
        Name:
          <%= best_in_place_if current_user, @user, :firstname, :type => :input %>
        <%= best_in_place_if current_user, @user, :lastname, :type => :input %>
        </p>
        <p>
        Age:
          <%= best_in_place_if current_user, @user, :age, :type => :input %>
        </p>
        <p>
        Gender:
          <%= best_in_place_if current_user, @user, :gender, :type => :select, :collection => ['male', 'female', 'n/a'] %>
        </p>
        <p>
        Description:
          <%= best_in_place_if current_user, @user, :description, :type => :textarea, :nil => "Click me to add a description!" %>
        </p>
      </div>
    </div>

    <div>
      <%= form_for @user, :url => user_path, method: :put, :html => { :multipart => true } do |form| %>
        <%= form.file_field :photo %>
        <%= form.submit "submit photo", :class => 'tiny secondary button' %>
      <% end %>
    </div>

    <p>Activity Tags</p>

    <div>
      <% @activity_tags.each do |tag| %>
        <% if @user.tags.include?(tag) %>
          <%= button_to [:delete_tagging, @user], params: {tag_id: tag.id}, method: :delete do %>
            <%= tag.name %>
            <% end %>
        <% else %>
          <%= button_to [:tag, @user], params: {tag_id: tag.id}, :class => 'small radius' do %>
          <%= tag.name %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <p>Goal Tags</p>

    <div>
      <% @goal_tags.each do |tag| %>
        <% if @user.tags.include?(tag) %>
          <%= button_to [:delete_tagging, @user], params: {tag_id: tag.id}, method: :delete do %>
            <%= tag.name %>
            <% end %>
        <% else %>
          <%= button_to [:tag, @user], params: {tag_id: tag.id}, :class => 'small radius' do %>
          <%= tag.name %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <p>Interest Tags</p>

    <div>
      <% @interest_tags.each do |tag| %>
        <% if @user.tags.include?(tag) %>
          <%= button_to [:delete_tagging, @user], params: {tag_id: tag.id}, method: :delete do %>
            <%= tag.name %>
            <% end %>
        <% else %>
          <%= button_to [:tag, @user], params: {tag_id: tag.id}, :class => 'small radius' do %>
          <%= tag.name %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
